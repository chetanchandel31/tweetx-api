datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAtMs DateTime @default(now())
  updatedAtMs DateTime @updatedAt

  name              String @unique
  email             String @unique
  encryptedPassword String
  salt              String
  // habits            Habit[]
}

