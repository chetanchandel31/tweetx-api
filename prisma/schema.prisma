datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAtMs DateTime @default(now())
  updatedAtMs DateTime @updatedAt

  name              String @unique
  email             String @unique
  encryptedPassword String
  salt              String

  posts Post[]

  followedBy Follows[] @relation("followedBy")
  following  Follows[] @relation("following")
}

model Follows {
  followId String @id @default(auto()) @map("_id") @db.ObjectId

  followedBy   User   @relation("followedBy", fields: [followedById], references: [userId])
  followedById String @db.ObjectId

  following   User   @relation("following", fields: [followingId], references: [userId])
  followingId String @db.ObjectId

  @@unique([followingId, followedById])
}

model Post {
  postId      String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAtMs DateTime @default(now())
  updatedAtMs DateTime @updatedAt

  content String

  user   User   @relation(fields: [userId], references: [userId])
  userId String @db.ObjectId
}
